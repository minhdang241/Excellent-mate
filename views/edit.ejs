    <script src="/javascripts/jquery.js"></script>


    <title>Profile Page</title>
</head>

<body>
    <div class="container">
        <h1>Edit Bio</h1>
        <form action="/profile/<%= user._id%>?_method=PUT" method="POST">
            
            
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="image" class="form-control" id="image" value="<%=user.image%>">
            </div>
            
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" value="<%=user.name%>">
            </div>
            
            <div class="form-group">
                <label for="bio">Bio</label>
                <input type="text" name="bio" class="form-control" id="bio" value="<%=user.bio%>">
            </div>

            <button type="submit">Submit</button>
            <a href="/profile/<%=user._id%>">Go back</a>
        </form>
    </div>
    <script src="/javascripts/profile.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
